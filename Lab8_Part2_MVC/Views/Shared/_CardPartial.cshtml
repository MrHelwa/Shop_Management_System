@model Product

<div class="card shadow-sm h-100">
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <img src="~/images/@Model.Image" class="card-img-top" alt="@Model.Name" style="height: 200px; object-fit:contain;">
    }
    else
    {
        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
            <i class="bi bi-image" style="font-size: 4rem;"></i>
        </div>
    }

    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text flex-grow-1">@Model.Description</p>

        <div class="mb-2">
            <span class="badge bg-success" style="font-size: 1.1rem;">$@Model.Price</span>
        </div>

        @if (Model.Customer != null)
        {
            <p class="card-text">
                <small class="text-muted">
                    <i class="bi bi-person"></i> @Model.Customer.Name
                </small>
            </p>
        }

        <div class="mt-2">
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ID" class="btn btn-info btn-sm">
                <i class="bi bi-eye"></i> Details
            </a>
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning btn-sm">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger btn-sm">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
</div>