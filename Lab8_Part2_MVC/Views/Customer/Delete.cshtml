@model Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container">
    <h1>Delete Customer</h1>

    <h3 class="text-danger">Are you sure you want to delete this customer?</h3>

@if (Model.Products != null && Model.Products.Any())
{
        <div class="alert alert-warning">
            <strong>Warning!</strong> This customer has @Model.Products.Count product(s). Deleting this customer will also delete all related products.
        </div>
}

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class=" col-sm-9
                <dd class="col-sm-9">@Model.ID</dd>

                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Gender:</dt>
                <dd class="col-sm-9">@Model.Gender</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Model.PhoneNum</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>